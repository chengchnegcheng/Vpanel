# Puppeteer E2E 测试环境变量配置

# 应用基础 URL
BASE_URL=http://localhost:8080

# 管理员凭证
ADMIN_USER=admin
ADMIN_PASS=admin123

# 测试用户凭证
TEST_USER=testuser
TEST_PASS=test123

# 浏览器配置
HEADLESS=true          # 无头模式（true/false）
SLOW_MO=0              # 减慢操作速度（毫秒）
DEVTOOLS=false         # 打开开发者工具（true/false）

# 截图配置
SCREENSHOT=true        # 启用截图（true/false）

# 视频录制
VIDEO=false            # 启用视频录制（true/false）
