# V Panel Docker Environment Variables
# Copy this file to .env and modify as needed

# Application version
VERSION=latest

# Server configuration
# 生产环境必须设置固定端口，不要留空
V_SERVER_PORT=8080
V_SERVER_MODE=release

# Authentication - 生产环境必须修改！
# JWT Secret 必须是至少 32 字符的随机字符串
# 生成方法: openssl rand -base64 32
V_JWT_SECRET=CHANGE_ME_OR_SYSTEM_WILL_REFUSE_TO_START
V_ADMIN_USER=admin
# 密码必须至少 12 字符，包含大小写字母、数字和特殊字符
V_ADMIN_PASS=CHANGE_ME_OR_SYSTEM_WILL_REFUSE_TO_START

# Logging
V_LOG_LEVEL=info
V_LOG_FORMAT=json

# Timezone
TZ=UTC

# Build information (set during CI/CD)
BUILD_TIME=
GIT_COMMIT=
